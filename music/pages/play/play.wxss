/* pages/play/play.wxss */
.contain{
  position: absolute;
  height: 100%;
  width: 100%;
}
.contain .bgimg{
  position: absolute;
  top:0;
  width: 100%;
  height: 100%;
  opacity: .4;
}
.circleImg{
  position: absolute;
  margin-top:340rpx;
  margin-left: 175rpx;
  height: 300rpx;
  width: 300rpx;
  border-radius: 100%;
  border: 50rpx solid rgba(0,0,0,.3);
  /* transform: rotate(90deg); */
  transition: all 1s linear;
}
.contain .header{
  width: 100%;
  position: absolute;
  z-index: 99;
  text-align: center; 
  background: rgba(0,0,0,.8);
  color: #fff;
  padding:20rpx;
}
.contain .header .name{
  font-size: 48rpx;
  font-weight: bold;
  margin:40rpx;
}
.footer{
  position: absolute;
  bottom: 0;
  z-index: 99;
  background: #000;
  width: 100%;
  color: #fff;
}
.footer .progress{
  padding:20rpx;
}
.footer progress{
  width: 500rpx;
  display: inline-block;
  margin:0 20rpx;
}
.footer .control image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin:30rpx;
}
.control .fav {
  position: absolute;
  width: 80rpx;
  height: 90rpx;
  right: 0px;
  padding: 8px;
  padding-right: 75px;
 background-color: black;
 margin-top: 7px;
}

.control .fav .share {
  width: 80rpx;
  height: 80rpx;
  margin: 0px;
  background-color: black;
}